@model Jungle_Models.ViewModels.DestinationVM

@{ Layout = "~/Views/Shared/_Layout.cshtml";
  var title = "Delete Destination"; }


<form method="post" enctype="multipart/form-data">
  <div class="row p-3 border">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Destination.Id" />
    <div class="col-12 border-bottom">
      <h2 class="text-primary">@title</h2>
    </div>
    <div class="col-8 pt-4">
      <div class="form-group row">
        <div class="col-4">
          <label asp-for="Destination.Name"></label>
        </div>
        <div class="col-8">
          <input disabled asp-for="Destination.Name" class="form-control" />
        </div>
      </div>

      <div class="form-group row">
        <div class="col-4">
          <label asp-for="Destination.Region"></label>
        </div>
        <div class="col-8">
          <input disabled asp-for="Destination.Region" class="form-control" />
        </div>
      </div>

      <div class="form-group row">
        <div class="col-4">
          Country
        </div>
        <div class="col-8">
          <input disabled asp-for="Destination.Region" class="form-control" />
        </div>
      </div>
      <div class="form-group row">
        <div class="col-8 offset-4 row">

          <div class="col">
              <input type="submit" class="btn btn-info w-100" asp-route-id="Destination.Id" value="Delete" /> 
          </div>
          <div class="col">
            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
          </div>
        </div>
      </div>
    </div>

  </div>
</form>
@section Scripts{

  @{
    <partial name="_ValidationScriptsPartial" />
  }

}

